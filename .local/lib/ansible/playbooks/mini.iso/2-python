---
- name: Configure virtualenv
  hosts: all
  tasks:
    - name: Install pip
      action: apt
      args:
        name:
          - python3-pip
          - python3-venv
      become: yes
    - name: Install libffi
      action: apt
      args:
        name: libffi-dev
      become: yes

    - name: Setup virtualenv
      action: pip
      args:
        virtualenv_command: /usr/bin/python3 -m venv
        virtualenv_site_packages: yes
        virtualenv: "{{lookup('ENV', 'HOME')}}/.virtualenv"
        name:
          - boto
          - keyring
          - requests
          - Jinja2
          - awscli
          - stashy
          - docker-compose
          - localstack

# Local Variables:
# mode: yaml
# End:
