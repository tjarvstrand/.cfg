- name: misc packages
  tags:
    - packages
  hosts: all
  become: yes
  tasks:
    - action: apt_repository
      name: Add apt repositories
      args:
        repo: "{{item}}"
      with_items:
        #- ppa:ubuntu-wine/ppa
        - ppa:hluk/copyq
        #- ppa:leolik/leolik # notify-osd fork # doesn't have ardwark yet

    - action: apt_repository
      name: Add apt repositories
      args:
        repo: ppa:leolik/leolik
        codename: zesty # notify-osd fork # doesn't have ardwark yet

    - action: apt
      args:
        update_cache: yes

    - action: apt
      args:
        name:
          # Libraries
          - libgtk-3-dev # For building themes
          - gstreamer1.0-pulseaudio # For Firefox pulseaudio
          - ubuntu-restricted-extras # media codecs

          #
          - blueman # bluetooth applet
          - feh # Desktop background
          - libnotify-bin
          - notify-osd
          - redshift # screen color temperature
          - mate-power-manager
          - xfce4-screenshooter

          # System tools
          - arandr
          - baobab
          - copyq
          - dconf-editor
          - dconf-gsettings-backend
          - dconf-service
          - gconf-editor
          - gparted
          - gsettings-desktop-schemas
          - gsettings-ubuntu-schemas
          - lightdm
          - light-locker
          - light-locker-settings
          - nautilus-dropbox
          - network-manager-openvpn-gnome
          - pavucontrol
          - playerctl
          - suckless-tools
          - synaptic
          - terminator
          - unity-greeter
          - xfce4-volumed

          # Applications
          - eog # Eye of Gnome
          - evince # pdf reader
          - filezilla
          - firefox
          - gimp
          - gnome-calculator
          - gnome-font-viewer
          - graphviz
          - nautilus
          - transmission
          - vinagre # vnc
          - virtualbox
          - vlc
          - wireshark

          # UI
          - arc-theme
          - dmz-cursor-theme
          - elementary-xfce-icon-theme
          - numix-gtk-theme # for xfce4-notifyd
          - ttf-mscorefonts-installer
          - ttf-ubuntu-font-family
          - xcursor-themes
          - ubuntu-wallpapers

          - xmonad
          - libdbusmenu-gtk3-dev

          - qtile

    - action: copy
      args:
        src: files/usr/share/lightdm/lightdm.conf.d/60-session.conf
        dest: /usr/share/lightdm/lightdm.conf.d/60-session.conf

- name: light
  hosts: all
  tags:
    - light
  vars:
    dir: "{{ \"~/src/light\" | expanduser }}"
  tasks:
    - name: install dependencies
      action: apt
      become: yes
      args:
        name: help2man
    - action: git
      args:
        repo: git://github.com/haikarainen/light.git
        dest: "{{dir}}"
    - shell: "{{dir}}/autogen.sh"
      args:
        chdir: "{{dir}}"
    - shell: "./configure && make"
      args:
        chdir: "{{dir}}"
    - shell: "make install"
      become: yes
      args:
        chdir: "{{dir}}"

- name: X
  hosts: all
  tags:
    - x
  tasks:
    # - name: XOrg config
    #   action: copy
    #   become: yes
    #   args:
    #     src: files/usr/share/X11/xorg.conf.d/100-compositing.conf
    #     dest: /usr/share/X11/xorg.conf.d/100-compositing.conf
    - name: X defaults
      action: copy
      args:
        dest: ~/.Xdefaults
        content: |
          URxvt.depth: 32
          URxvt*background: rgba:0000/0000/0000/cccc
          Xcursor.size: 24
    - action: copy
      become: yes
      args:
        dest: /etc/udev/rules.d/70-drm_event.rules
        content: |
          KERNEL=="card0", SUBSYSTEM=="drm", RUN+="/home/tjarvstrand/bin/udev_drm_event"
    - action: service
      become: yes
      args:
        name: udev
        state: restarted

